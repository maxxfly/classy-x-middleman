<html>
    <head>
    	<title><%= if current_page.data.title
        "Classy X - #{t(current_page.data.title)}"
  else
        "Classy X - Fashion creation"
  end
        %></title>
    	<meta charset="utf-8"/>
      <link href="https://fonts.googleapis.com/css?family=Carrois+Gothic|Carrois+Gothic+SC|Raleway:700" rel="stylesheet">

      <%= stylesheet_link_tag 'base' %>

      <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
      <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
      <meta name="description" content="Classy X is redefining the fashion rulebook and what beauty means in the modern world." />

      <%= javascript_include_tag 'bower_components/jquery/dist/jquery.min' %>
      <%= javascript_include_tag 'index' %>
      <%= javascript_include_tag 'modernizr.custom.79639' %>
    </head>
    <body>
      <header>
        <%= link_to (image_tag "images/img/logo_onepagepng8.png", alt: "Classy X", title: "Classy X", width: "240"), "index.html" %>
        <div class="container">
          <section class="carousel">
            <div id="carousel">
              <div class="paragraphe">
                <p>Classy X is redefining the fashion rulebook</p>
          		  <p>and what beauty means in the modern world.</p>
          		</div>
              <div class="paragraphe">
                <p>We work with classic beauty as well with plus size,</p>
          		  <p>transgender, bodmod and other non-conforming beauty.</p>
          		</div>
              <div class="paragraphe">
               	<p>We are moving the conversation</p>
                <p>on fashion to new heights.</p>
                <a href="javascript: replay();"><i class="fa fa-chevron-left" aria-hidden="true"></i>
                            Replay
                </a>
        		  </div>
         	  </div>
          </section>
        </div>
      </header>

      <section id="main">
        <%= yield %>
      </section>

      <footer>

        <div><a href="mailto:info@classy-x.com">Contact</a></div>
        <div><a href="product.html" title="<%= t(:button_products) %>"><%= t(:button_products) %></a></div>
        <div><a href="support.html" target="_blank" title="<%= t(:button_support) %>"><%= t(:button_support) %></a></div>
        <div><a href="presse.html" target="_blank" title="<%= t(:button_presse) %>"><%= t(:button_presse) %></a></div>
        <div><a href="https://www.instagram.com/classyxdesign/" target="_blank" title="Instagram page">Instagram</a></div>
      </footer>
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-36264559-3', 'auto');
        ga('send', 'pageview');

        function track_etsy(){
          ga('set', 'page', '/etsy.html');
          ga('send', 'pageview');
        }

        function track_instagram(){
          ga('set', 'page', '/instagram.html');
          ga('send', 'pageview');
        }

        function track_spreadshirt(){
          ga('set', 'page', '/spreadshirt.html');
          ga('send', 'pageview');
        }

        function track_redbubble(){
          ga('set', 'page', '/redubble.html');
          ga('send', 'pageview');
        }

        function track_twitter(){
          ga('set', 'page', '/twitter.html');
          ga('send', 'pageview');
        }

        function track_share_twitter() {
          ga('set', 'page', '/share_twitter.html');
          ga('send', 'pageview');
        }

        function track_share_facebook() {
          ga('set', 'page', '/share_facebook.html');
          ga('send', 'pageview');
        }

        function redirect_to(url) {
          if(ga && ga.create)
          {
            ga('send', 'pageview', {
              'hitCallback': function() {
                window.location = url;
              }
            });
          }
          else
          {
            window.location = url;
          }
        }

      </script>
    </body>
</html>
